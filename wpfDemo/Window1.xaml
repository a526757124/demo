<Window x:Class="wpfDemo.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="300" Width="300">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="test" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5">
        </Label>
        <Button Grid.Row="0" Grid.Column="1" Content="123"></Button>
        <Button Grid.Row="0" Grid.Column="2">
            <Image Source="/Images/11.png" HorizontalAlignment="Left" VerticalAlignment="Stretch"></Image>
        </Button>
        <Button Grid.Row="1" Grid.Column="0" Grid.RowSpan="3"></Button>
        <Border BorderBrush="Red" BorderThickness="1" ></Border>
        <Border BorderBrush="Red" BorderThickness="1" Grid.Column="1" Grid.Row="0" ></Border>
    </Grid>
</Window>
